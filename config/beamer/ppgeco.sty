\definecolor{airforceblue}{rgb}{0.36, 0.54, 0.66}
\definecolor{morelightgray}{rgb}{0.9, 0.9, 0.9}

% "Warm grey"
\definecolor{sintefgrey}{RGB/cmyk}{235,235,230/0,0,0,.1}
